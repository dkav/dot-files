# ALIASES
# -------

# Directory listings
alias ls="ls -G"
alias ll="ls -lh"
alias la="ls -lah"
alias lt="ls -laht"
alias lh="ls -lad .*"

# Directory history
alias dh='dirs -v'

# DOS commands
alias cls="clear"
alias dir="ls"

# Homebrew
alias bw="brew"
alias bwu="brew upgrade"
alias bwo="brew outdated"
alias blf="brew list --formula"
alias blc="brew list --cask"
alias blp="brew list --pinned"
alias bwl="brew leaves --installed-on-request"
alias bdi="brew deps --installed"
alias bdb="brew deps --installed --include-build"
alias bui="brew uses --installed"
alias bud="brew uses --installed --include-build"
alias bwc="brew cleanup --prune=all"

# Git
alias gt="git"
alias gs="git status -s"
alias gk="gitk --all&"

# Python
alias python="$HOMEBREW_PREFIX/bin/python3"

# IPython & Jupyter
alias ipy=ipython
alias jpl="jupyter-lab"

# Node
alias ng="npm list -g --depth=0"
alias nl="npm list --depth=0"

# Web servers
alias nws="http-server -o"
alias pws="python3 -m http.server &; sleep 0.1; \
  open -g http://localhost:8000; fg"
