# ALIASES
# -------

# Directory listings
alias ls="ls -G"
alias ll="ls -lh"
alias la="ls -lah"
alias lt="ls -laht"
alias lh="ls -lad .*"

# DOS commands
alias cls="clear"
alias dir="ls"

# Dev environment setup
alias devno=". ~/.dev/dev_no"
alias devpy=". ~/.dev/dev_py"
alias devrb=". ~/.dev/dev_rb"

# Web servers
alias nws="devno && http-server ./ &; open -g http://localhost:8080"
alias pws="python -m SimpleHTTPServer &; open -g http://localhost:8000"

# Homebrew
alias bw="brew"
alias bwu="brew update && brew upgrade && brew cleanup"
alias bk="brew cask"
alias bko="brew update && brew cask outdated"
alias bku="brew cask upgrade && brew cleanup"

# Git
alias git="hub"
alias gt="git"

# IPython & Jupyter
alias ipy=ipython
alias jpn="devpy && pyenv shell jupyter && jupyter notebook"

# Directory shortcuts
alias ddd="cd /Users/dkav/Documents/Development"
