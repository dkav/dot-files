# ALIASES
# -------
# 'ls'  Aliases
alias ls="ls -G"
alias ll="ls -lh"
alias la="ls -lah"
alias lt="ls -laht"
alias lh="ls -lad .*"

# Windows Aliases
alias cls="clear"
alias dir="ls"

# Development Aliases
alias ddd="cd /Users/Darren/Documents/Development"
alias devno=". ~/.dev/dev_no"
alias devpy=". ~/.dev/dev_py"
alias devrb=". ~/.dev/dev_rb"

# Web Servers
alias nws=". ~/.dev/dev_no && http-server ./ &; open -g http://localhost:8080"
alias pws="python -m SimpleHTTPServer &; open -g http://localhost:8000"

# Homebrew Aliases
alias hbu="brew update && brew upgrade && brew cleanup"
