# ALIASES
# -------

# Directory listings
alias ls="ls -G"
alias ll="ls -lh"
alias la="ls -lah"
alias lt="ls -laht"
alias lh="ls -lad .*"

# DOS commands
alias cls="clear"
alias dir="ls"

# Dev environment setup
alias devno=". ~/.dev/dev_no"
alias devpy=". ~/.dev/dev_py"
alias devrb=". ~/.dev/dev_rb"

# Web servers
alias nws="devno && http-server ./ &; open -g http://localhost:8080"
alias pws="python -m SimpleHTTPServer &; open -g http://localhost:8000"

# Homebrew
alias hbu="brew update && brew upgrade && brew cleanup && brew cask cleanup"
alias hco="brew cask outdated"

# Git
alias git=hub
alias gt=git

# Jupyter notebook
alias jpn='devpy && pyenv shell jupyter && jupyter notebook'

# Directory shortcuts
alias ddd="cd /Users/Darren/Documents/Development"
