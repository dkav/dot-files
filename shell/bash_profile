# PATH
# ----
# Base path
PATH=/usr/local/bin:/usr/local/opt/ruby/bin:/usr/local/sbin\
     :/usr/bin:/bin:/usr/sbin:/sbin

export PATH


# Misc
# ----
# Set default browser
export BROWSER=open

# Set default editor
export EDITOR=/usr/local/bin/mvim

# Set path to GDAL drivers
export GDAL_DRIVER_PATH=/usr/local/lib/gdalplugins

# Homebrew completion
if [ -f $(brew --prefix)/etc/bash_completion ]; then
    source $(brew --prefix)/etc/bash_completion
fi

# Load in .bashrc
if [ -f ~/.bashrc ]; then
    source ~/.bashrc
fi
