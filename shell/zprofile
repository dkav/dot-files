# PATH
# ----
eval "$(/opt/homebrew/bin/brew shellenv)"
path=($(brew --prefix ruby)/bin $path $HOME/.local/bin)
export PATH

# Environment Variables
# ---------------------
export EDITOR=$HOMEBREW_PREFIX/bin/mvim
export HOMEBREW_BUNDLE_FILE=$HOME/.homebrew/Brewfile
export HOMEBREW_GITHUB_API_TOKEN=$( cat $HOME/.token/homebrew_github_api_token )

# GnuPG
export GNUPGHOME=$XDG_DATA_HOME/gnupg
# Node
export NPM_CONFIG_USERCONFIG=$XDG_CONFIG_HOME/npm/npmrc
