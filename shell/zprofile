# PATH
# ----
# Base PATH
path=(/usr/local/opt/python@3.10/bin
      /usr/local/bin
      /usr/local/opt/ruby/bin
      $(/usr/local/opt/ruby/bin/gem environment gemdir)/bin
      /usr/local/opt/tcl-tk/bin
      /usr/local/sbin
      /usr/bin
      /bin
      /usr/sbin
      /sbin)

export PATH


# Misc
# ----
# Set default browser
export BROWSER=open

# Set default editor
export EDITOR=/usr/local/bin/mvim

# GitHub shell token
export GH_TOKEN=$( cat ~/.token/shell_github_api_token )

# Homebrew settings
export HOMEBREW_CLEANUP_PERIODIC_FULL_DAY=7
export HOMEBREW_CLEANUP_MAX_AGE_DAYS=14
export HOMEBREW_NO_EMOJI=1
export HOMEBREW_BUNDLE_FILE="$HOME/.brewfile"
export HOMEBREW_BUNDLE_NO_LOCK=1
export HOMEBREW_GITHUB_API_TOKEN=$( cat ~/.token/homebrew_github_api_token )

# Pyenv
eval "$(pyenv init --path)"
export PYENV_VIRTUALENV_DISABLE_PROMPT=1
