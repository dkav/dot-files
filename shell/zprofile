# PATH
# ----
# Base PATH
path=(/usr/local/bin
      /usr/local/opt/ruby/bin
      /usr/local/lib/ruby/gems/2.6.0/bin
      /usr/local/opt/tcl-tk/bin
      /usr/local/sbin
      /usr/bin
      /bin
      /usr/sbin
      /sbin
      /Applications/Postgres.app/Contents/Versions/latest/bin)

export PATH


# Misc
# ----
# Set default browser
export BROWSER=open

# Set default editor
export EDITOR=/usr/local/bin/mvim

# Homebrew settings
export HOMEBREW_CLEANUP_PERIODIC_FULL_DAY=0
export HOMEBREW_CLEANUP_MAX_AGE_DAYS=0
export HOMEBREW_BUNDLE_FILE="$HOME/Development/Configuration/Mac-Config/Homebrew/Brewfile"
export HOMEBREW_BUNDLE_NO_LOCK=1

# Create pipenv virutalenvs in project folder
export PIPENV_VENV_IN_PROJECT=1
