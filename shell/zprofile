# PATH
# ----
# Base PATH
path=(/usr/local/bin
      /usr/bin
      /bin
      /usr/sbin
      /sbin)

# Paths to additional binaries
path+=(Library/Frameworks/Python.framework/Versions/3.6/bin)
path+=(/Applications/Postgres.app/Contents/Versions/latest/bin)

export PATH


# Misc
# ----
# Set default browser
export BROWSER=open

# Set default editor
export EDITOR=/usr/local/bin/mvim

# Set path to GDAL drivers
export GDAL_DRIVER_PATH=/usr/local/lib/gdalplugins
