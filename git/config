[user]
	name = Darren Kavanagh
	email = dkav@users.noreply.github.com
	signingkey = 37E3C689
[credential]
	helper = osxkeychain
[commit]
	gpgsign = true
[pull]
	rebase = true
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = mvim -f
[diff]
	tool = vimdiff
	guitool = mvimdiff
[diff "textutil"]
	textconv = textutil -convert txt -stdout
[difftool]
	prompt = false
[difftool "vimdiff"]
	trustExitCode = true
[difftool "mvimdiff"]
	cmd = mvimdiff -f \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = vimdiff
	guitool = mvimmerge
[mergetool]
	trustExitCode = true
[mergetool "mvimmerge"]
	cmd = mvimdiff -f \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[alias]
	# Basic
	st = status -s
	cl = clone
	ci = commit
	co = checkout
	br = branch
	r = reset
	cp = cherry-pick
	gr = grep -Iin

	# Diff
	df = diff
	dfc = diff --cached
	dfw = diff --word-diff=color --unified=1
	dt = difftool -g

	# Log
	ls = log --pretty=format:'%C(yellow)%h%Creset %C(magenta)%d%Creset %s %C(cyan)[%an]%Creset'
	lg = log --graph \
		--abbrev-commit \
		--pretty=format:'%C(yellow)%h%Creset -%C(magenta)%d%Creset %s %Cgreen(%cr) %C(cyan)[%an]%Creset'
	ll = log --numstat \
		--pretty=format:'%C(yellow)%h%Creset %C(magenta)%d%Creset %s %C(cyan)[%an]%Creset'
	ld = log --date=short \
		--pretty=format:'%C(yellow)%h%Creset %Cgreen%cd%C(magenta)%d%Creset %s %C(cyan)[%an]%Creset'

	# Stash
	sl = stash list
	sa = stash apply
	sp = stash pop
	ss = stash save

	# Aliases
	la = "!git config -l | grep alias | cut -c 7-"
