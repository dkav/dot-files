	name = Darren Kavanagh
	email = dkav@users.noreply.github.com
	signingkey = 37E3C689
[credential]
	helper = osxkeychain
[core]
	editor = mvim -f
[diff]
	tool = vimdiff
	guitool = mvimdiff
[diff "textutil"]
	textconv=textutil -convert txt -stdout
[difftool]
	prompt = false
[difftool "mvimdiff"]
	cmd = mvimdiff -f \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = vimdiff
	guitool = mvimmerge
[mergetool "mvimmerge"]
	cmd = mvimdiff -f \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	dfc = diff --cached
	dfw = diff --word-diff=color --unified=1
	dt = difftool
	dtg = difftool -g
	lg = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(magenta)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit
	ls = ls-files
	lsi = ls-files -o -i --exclude-standard
