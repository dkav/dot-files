[user]
	name = Darren Kavanagh
	email = dkav@users.noreply.github.com
	signingkey = 37E3C689
[credential]
	helper = osxkeychain
[commit]
	gpgsign = true
[gpg]
	program = /usr/local/bin/gpg
[pull]
	rebase = true
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = mvim -f
[diff]
	tool = p4merge
[diff "textutil"]
	textconv = textutil -convert txt -stdout
[difftool "vimdiff"]
	trustExitCode = true
[difftool "p4merge"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge \
		"\"$REMOTE\"" "\"$LOCAL\""
[difftool "mvim"]
	cmd = mvimdiff -f \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = vimdiff
	guitool = p4merge
	conflictstyle = diff3
[mergetool]
	keepBackup = false
[mergetool "vimdiff"]
	trustExitCode = true
[mergetool "p4merge"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge \
		\"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = false
[mergetool "mvim2"]
	cmd = mvimdiff -f -M -c '2wincmd w | set modifiable | set write' \
		\"$LOCAL\" \"$MERGED\" \"$REMOTE\"
	trustExitCode = false
[mergetool "mvim3"]
	cmd = mvimdiff -f -M -c '4wincmd w | wincmd J | set modifiable | set write' \
		\"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = false
[log]
	date = format:%Y-%m-%d %H:%M
[rebase]
	instructionFormat = %s [%an] [%ai]
[alias]
	# Basic
	br = branch
	co = checkout
	cl = clone
	ci = commit
	cp = cherry-pick
	gp = grep -Iin
	pl = pull
	ph = push
	rt = remote
	rs = reset
	ss = stash
	st = status

	# Rebase
	rb = rebase
	ri = rebase -i

	# Diff
	df = diff
	dt = difftool --tool p4merge
	dc = diff --name-only --diff-filter=U # Conflicted files
	ds = diff --staged
	dw = diff --word-diff=color --unified=1

	# Merge
	mg = merge
	mn = merge --no-ff
	mt = mergetool --tool p4merge

	# Log
	ls = log --pretty=format:'%C(yellow)%h %Creset %<(50,trunc)%s %C(cyan)<%an> %Cgreen(%ad)'
	lg = log --graph --color \
		--pretty=format:'%C(yellow)%h%C(magenta)%d%Creset %<|(70,trunc)%s%C(cyan)<%an> %Cgreen(%ad)'
	ll = log --numstat \
		--pretty=format:'%C(yellow)%h %C(cyan)<%an> %Cgreen(%ad)%n%s'

	# Config
	ce = config --global --edit

	# Aliases
	al = "!git config -l | grep alias | cut -c 7- | less"
