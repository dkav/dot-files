[user]
	name = Darren Kavanagh
	email = dkav@users.noreply.github.com
	signingkey = 37E3C689
[credential]
	helper = osxkeychain
[commit]
	gpgsign = true
[pull]
	rebase = true
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = vim -f
[diff]
	tool = vimdiff
[diff "textutil"]
	textconv = textutil -convert txt -stdout
[difftool "vimdiff"]
	trustExitCode = true
[difftool "p4merge"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge \
		"\"$REMOTE\"" "\"$LOCAL\""
[difftool "mvim"]
	cmd = mvimdiff -f \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	keepBackup = false
[mergetool "vimdiff"]
	trustExitCode = true
[mergetool "p4merge"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge \
		\"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = false
[mergetool "mvim2"]
	cmd = mvimdiff -f -M -c '2wincmd w | set modifiable | set write' \
		\"$LOCAL\" \"$MERGED\" \"$REMOTE\"
	trustExitCode = false
[mergetool "mvim3"]
	cmd = mvimdiff -f -M -c '4wincmd w | wincmd J | set modifiable | set write' \
		\"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = false
[alias]
	# Basic
	st = status -s
	cl = clone
	ci = commit
	co = checkout
	br = branch
	ph = push
	pl = pull
	rs = reset
	cp = cherry-pick
	sh = stash
	gp = grep -Iin

	# Rebase
	rb = rebase
	ri = rebase -i

	# Diff
	df = diff
	dt = difftool --tool p4merge
	dc = diff --name-only --diff-filter=U # Conflicted files
	ds = diff --staged
	dw = diff --word-diff=color --unified=1

	# Merge
	mg = merge
	mt = mergetool --tool p4merge

	# Log
	ls = log --pretty=format:'%C(yellow)%h%Creset %C(magenta)%d%Creset %s %C(cyan)[%an]%Creset'
	lg = log --graph \
		--abbrev-commit \
		--pretty=format:'%C(yellow)%h%Creset -%C(magenta)%d%Creset %s %Cgreen(%cr) %C(cyan)[%an]%Creset'
	ll = log --numstat \
		--pretty=format:'%C(yellow)%h%Creset %C(magenta)%d%Creset %s %C(cyan)[%an]%Creset'
	ld = log --date=short \
		--pretty=format:'%C(yellow)%h%Creset %Cgreen%cd%C(magenta)%d%Creset %s %C(cyan)[%an]%Creset'

	# Aliases
	al = "!git config -l | grep alias | cut -c 7- | less"
